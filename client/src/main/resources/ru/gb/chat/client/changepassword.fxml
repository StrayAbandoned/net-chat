<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="ru.gb.chat.client.ChangePassController"
      prefHeight="400.0" prefWidth="600.0">

    <PasswordField fx:id="oldPassword" promptText="old password" HBox.hgrow="ALWAYS">
        <VBox.margin>
            <Insets top="10.0" left="10.0" right="10.0"/>
        </VBox.margin>
    </PasswordField>
    <PasswordField fx:id="newPassword" promptText="new password" HBox.hgrow="ALWAYS">
        <VBox.margin>
            <Insets top="10.0" left="10.0" right="10.0"/>
        </VBox.margin>
    </PasswordField>
    <PasswordField fx:id="passConfirm" promptText="confirm new password" HBox.hgrow="ALWAYS">
        <VBox.margin>
            <Insets top="10.0" left="10.0" right="10.0"/>
        </VBox.margin>
    </PasswordField>
    <Button fx:id="passBtn"  VBox.vgrow="ALWAYS" onAction="#changePassword" text="Change password">
        <VBox.margin>
            <Insets top="10.0" left="10.0" right="10.0"/>
        </VBox.margin>
    </Button>

</VBox>
